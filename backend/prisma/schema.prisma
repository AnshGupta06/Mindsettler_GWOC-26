generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl= env("DIRECT_URL")
}

enum BookingStatus {
  PENDING
  CONFIRMED
  REJECTED
}

enum SessionMode {
  ONLINE
  OFFLINE
}

enum SessionType {
  FIRST
  FOLLOW_UP
}

model User {
  id           String    @id @default(uuid())
  firebaseUid String    @unique
  email        String    @unique
  name         String?
  phone        String?
  isBlocked   Boolean   @default(false) 
  bookings     Booking[]
  adminNotes   AdminNote[]
  createdAt    DateTime  @default(now())
}

model SessionSlot {
  id        String   @id @default(uuid())
  date      DateTime
  startTime DateTime
  endTime   DateTime
  mode      SessionMode
  therapyType String?
  isBooked  Boolean  @default(false)

  booking   Booking?
}

model Booking {
  id        String         @id @default(uuid())
  status    BookingStatus @default(PENDING)
  type      SessionType
  therapyType String?
  reason    String?

  userId    String
  slotId    String @unique
  meetingLink String?
  user      User        @relation(fields: [userId], references: [id])
  slot      SessionSlot @relation(fields: [slotId], references: [id])

  meetingNotes MeetingNotes?

  createdAt DateTime @default(now())
}

model MeetingNotes {
  id          String   @id @default(uuid())
  bookingId   String   @unique
  booking     Booking  @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  
  // Meeting tracking
  meetingStartedAt DateTime?
  meetingEndedAt   DateTime?
  meetingDuration  Int? // in minutes
  
  // Structured notes format
  sessionSummary   String?
  clientProgress   String?
  keyInsights      String?
  followUpPlan     String?
  additionalNotes  String?
  
  // Admin info
  therapistNotes   String?
  createdBy        String // admin firebase uid
  updatedAt        DateTime @updatedAt
}

model BookingDiscount {
  id              String   @id @default(uuid())
  isActive        Boolean  @default(true) @map("is_active")
  bookingCountFrom Int     @map("booking_count_from")
  bookingCountTo   Int     @map("booking_count_to")
  discountPercent  Int     @map("discount_percent")
  label           String?
  createdAt       DateTime @default(now()) @map("created_at")

  @@map("booking_discounts")
}

model AdminNote {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  note      String
  createdBy String   // admin firebase uid
  createdAt DateTime @default(now())
}

model CorporateInquiry {
  id          String   @id @default(uuid())
  companyName String
  contactName String
  email       String
  message     String
  createdAt   DateTime @default(now())
}
model GlobalSettings {
  id                String   @id @default(uuid())
  priceFirst        Int      @default(1499)
  priceFollowUp     Int      @default(999)
  cancellationHours Int      @default(24)
  updatedAt         DateTime @updatedAt
}