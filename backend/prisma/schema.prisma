generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum BookingStatus {
  PENDING
  CONFIRMED
  REJECTED
}

enum SessionMode {
  ONLINE
  OFFLINE
}

enum SessionType {
  FIRST
  FOLLOW_UP
}

model User {
  id           String    @id @default(uuid())
  firebaseUid String    @unique
  email        String    @unique
  name         String?
  phone        String?
  bookings     Booking[]
  createdAt    DateTime  @default(now())
}

model SessionSlot {
  id        String   @id @default(uuid())
  date      DateTime
  startTime DateTime
  endTime   DateTime
  mode      SessionMode
  therapyType String?
  isBooked  Boolean  @default(false)

  booking   Booking?
}

model Booking {
  id        String         @id @default(uuid())
  status    BookingStatus @default(PENDING)
  type      SessionType
  therapyType String?
  reason    String?

  userId    String
  slotId    String @unique

  user      User        @relation(fields: [userId], references: [id])
  slot      SessionSlot @relation(fields: [slotId], references: [id])

  createdAt DateTime @default(now())
}